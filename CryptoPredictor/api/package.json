{
  "name": "cryptopredictor-api",
  "version": "1.0.0",
  "description": "API server for CryptoPredictor - Blockchain-based cryptocurrency prediction platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:predictions": "jest tests/predictions.test.js",
    "test:users": "jest tests/users.test.js",
    "test:models": "jest tests/models.test.js",
    "test:crypto": "jest tests/crypto.test.js",
    "test:admin": "jest tests/admin.test.js",
    "test:blockchain": "jest tests/blockchain.test.js",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=tests",
    "test:blockchain-integration": "TEST_WITH_BLOCKCHAIN=true jest --config=jest.blockchain.config.json",
    "test:blockchain-dry": "jest tests/blockchain-integration.test.js",
    "test:real-blockchain": "cross-env TEST_WITH_BLOCKCHAIN=true jest --config=jest.blockchain.config.json --verbose"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "prediction",
    "api",
    "express",
    "web3"
  ],
  "author": "CryptoPredictor Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "routes/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/contracts/",
      "/frontend/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "maxWorkers": 1
  }
}
